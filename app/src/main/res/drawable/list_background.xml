<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#0000af"
                android:endColor="#00003f"
                android:angle="90"
                android:centerColor="#00003f"
                />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#af0000"
                android:endColor="#3f0000"
                android:angle="90"
                android:centerColor="#3f0000"
                />
        </shape>
    </item>

</selector>