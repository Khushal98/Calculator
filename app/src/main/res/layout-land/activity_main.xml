<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main_landscape"
    android:weightSum="9"
    android:gravity="bottom"
    android:background="#000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom|end"
        android:textColor="#fff"
        android:layout_weight="2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        >
        <Button
            style="@style/Button"
            android:id="@+id/history"
            android:layout_gravity="center"
            android:text="@string/history"
            android:drawableStart="@drawable/ic_history_black_24dp"
            android:drawableLeft="@drawable/ic_history_black_24dp"
            android:paddingStart="40dp"
            android:paddingLeft="40dp"
            tools:ignore="RtlSymmetry" />
        <Button
            style="@style/Button"
            android:id="@+id/copy"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_copy"
            android:drawableLeft="@drawable/ic_copy"
            android:text="@string/copy"
            android:paddingStart="40dp"
            android:paddingLeft="40dp"
            tools:ignore="RtlSymmetry" />
        <Button
            style="@style/Button"
            android:id="@+id/converter"
            android:layout_gravity="center"
            android:text="@string/converter"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="7">
        <FrameLayout
            android:layout_height="match_parent"
            android:id="@+id/scientific_container"
            android:layout_width="0dp"
            android:layout_weight="3"
            tools:ignore="NestedWeights" />
        <FrameLayout
            android:layout_height="match_parent"
            android:id="@+id/number_container"
            android:layout_width="0dp"
            android:layout_weight="4"/>
    </LinearLayout>


</LinearLayout>